<h1>Listing blocks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Column</th>
    <th>Position</th>
    <th>Sheet</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blocks.each do |block| %>
  <tr>
    <td><%= link_to block.name, block %></td>
    <td><%= block.column %></td>
    <td><%= block.position %></td>
    <td><%= block.sheet.name %></td>
    <td><%= link_to 'Edit', edit_block_path(block) %></td>
    <td><%= link_to 'Destroy', block, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Block', new_block_path %>
